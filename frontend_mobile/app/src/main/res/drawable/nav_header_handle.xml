<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape: white with rounded right edges, fixed size -->
    <item
        android:width="25dp"
        android:height="50dp"
        android:gravity="start|center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp" />
        </shape>
    </item>

    <!-- Orange chevron icon slightly inset from left, vertically centered -->
    <item
        android:drawable="@drawable/ic_chevron_right_customorange"
        android:width="25dp"
        android:height="40dp"
        android:gravity="start|center_vertical"
        android:drawableTintMode="src_in" />  <!-- Adjusting position directly -->

</layer-list>
