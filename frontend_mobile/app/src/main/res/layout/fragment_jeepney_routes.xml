<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/search_route_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Route"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/clear_route_button"/>

    <!-- clear button -->
    <ImageButton
        android:id="@+id/clear_route_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_clear"
        android:background="@drawable/circle_gray_background"
        android:contentDescription="Clear Route"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Location Selector Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/clear_route_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Location Input -->
            <EditText
                android:id="@+id/initialLocation"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_input_background"
                android:hint="Initial location"
                android:paddingStart="40dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/swapButton" />

            <!-- Swap Button -->
            <ImageView
                android:id="@+id/swapButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_swap_vert"
                android:contentDescription="Swap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/initialLocation"
                app:layout_constraintBottom_toTopOf="@id/destinationInput"
                app:layout_constraintVertical_bias="0.5" />

            <!-- Blue Dot Icon -->
            <View
                android:id="@+id/blueDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/orange_dot"
                app:layout_constraintStart_toStartOf="@id/initialLocation"
                app:layout_constraintTop_toTopOf="@id/initialLocation"
                app:layout_constraintBottom_toBottomOf="@id/initialLocation"
                android:layout_marginStart="16dp" />

            <!-- Dotted Line -->
            <View
                android:id="@+id/dottedLine"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@drawable/dotted_line"
                app:layout_constraintStart_toStartOf="@id/blueDot"
                app:layout_constraintEnd_toEndOf="@id/blueDot"
                app:layout_constraintTop_toBottomOf="@id/initialLocation"
                app:layout_constraintBottom_toTopOf="@id/destinationInput"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- Destination Input -->
            <EditText
                android:id="@+id/destinationInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_input_background"
                android:hint="Select destinations"
                android:paddingStart="40dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@id/initialLocation"
                app:layout_constraintStart_toStartOf="@id/initialLocation"
                app:layout_constraintEnd_toEndOf="@id/initialLocation" />

            <!-- Red Pin Icon -->
            <View
                android:id="@+id/redPin"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_custom_marker"
                app:layout_constraintStart_toStartOf="@id/destinationInput"
                app:layout_constraintTop_toTopOf="@id/destinationInput"
                app:layout_constraintBottom_toBottomOf="@id/destinationInput"
                android:layout_marginStart="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Routes Title -->
    <TextView
        android:id="@+id/routesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Routes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/locationCard"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Jeepney Routes RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/routesTitle"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
